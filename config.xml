<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spane</name>
    <description>
      A job seeking platform to help better your chances for that dream job
    </description>
    <author email="helpdesk@spaneapp.com" href="www.spaneapp.com">
      Neko Ntsane
      Nvulane Nhlapo
      Lehlohonolo Makoti
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />
        <splash density="land-hdpi" src="res/screen/android/splash-land-hdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <splash src="www/img/splash-land-hdpi.png" />
    <icon src="www/img/icon_circle.png" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-camera" spec="^4.0.1" />
    <plugin name="cordova-plugin-network-information" spec="^2.0.1" />
    <plugin name="cordova-inappbrowser" spec="^1.0.6" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.1" />
    <engine name="ios" spec="^4.5.4" />
</widget>
